<%= form_with model: comment, url: url do |form| %>
    <% if form.object.errors.any? %>
        <div>
            <% form.object.errors.full_messages.each do |message| %>
                <div>
                    <p><%= message %></p>
                </div>
            <% end %>
        </div>
    <% end %>
    <div>
        <%= form.text_area :content %>
    </div>
    <%= form.button%>
<% end %>